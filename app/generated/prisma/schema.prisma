generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = "file:../db/dev.db"
}

model TravelPlan {
  id          String   @id @default(cuid())
  destination String
  startDate   String
  endDate     String
  budget      String
  peopleType  String
  adults      Int
  children    Int
  createdAt   DateTime @default(now())
  expiresAt   DateTime
}
